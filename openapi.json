{
  "openapi": "3.0.0",
  "info": {
    "title": "Reacher",
    "version": "0.1",
    "description": "Reacher backend OpenAPIv3 specification.",
    "license": {
      "name": "GPL-3.0",
      "url": "https://github.com/reacherhq/microservices/blob/master/LICENSE"
    },
    "contact": {
      "name": "Reacher",
      "url": "https://reacher.github.io"
    }
  },
  "servers": [
    {
      "url": "https://reacher.fly.dev",
      "description": "Powered by Fly"
    }
  ],
  "paths": {
    "/check_email": {
      "post": {
        "summary": "Email verification.",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/EmailResult"
                },
                "examples": {
                  "Example": {
                    "value": {
                      "input": "test@gmail.com",
                      "misc": {
                        "is_disposable": false
                      },
                      "mx": {
                        "records": [
                          "alt4.gmail-smtp-in.l.google.com.",
                          "alt2.gmail-smtp-in.l.google.com.",
                          "alt3.gmail-smtp-in.l.google.com.",
                          "gmail-smtp-in.l.google.com.",
                          "alt1.gmail-smtp-in.l.google.com."
                        ]
                      },
                      "smtp": {
                        "has_full_inbox": false,
                        "is_catch_all": false,
                        "is_deliverable": false,
                        "is_disabled": false
                      },
                      "syntax": {
                        "address": "test@gmail.com",
                        "domain": "gmail.com",
                        "username": "test",
                        "valid_format": true
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "operationId": "post-check-email",
        "description": "Perform a full verification of an email address.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "to_email": {
                    "type": "string",
                    "description": "The email address to check.",
                    "format": "email",
                    "example": "test@gmail.com"
                  },
                  "from_email": {
                    "type": "string",
                    "description": "In the SMTP connection, the FROM email address.",
                    "format": "email",
                    "default": "user@example.org"
                  },
                  "hello_name": {
                    "type": "string",
                    "description": "In the SMTP connection, the EHLO hostname.",
                    "format": "hostname",
                    "default": "example.org"
                  }
                },
                "required": [
                  "to_email"
                ]
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "EmailResult": {
        "title": "EmailResult",
        "type": "object",
        "x-examples": {
          "test@gmail.com": {
            "input": "test@gmail.com",
            "misc": {
              "is_disposable": false
            },
            "mx": {
              "records": [
                "alt4.gmail-smtp-in.l.google.com.",
                "alt2.gmail-smtp-in.l.google.com.",
                "alt3.gmail-smtp-in.l.google.com.",
                "gmail-smtp-in.l.google.com.",
                "alt1.gmail-smtp-in.l.google.com."
              ]
            },
            "smtp": {
              "has_full_inbox": false,
              "is_catch_all": false,
              "is_deliverable": false,
              "is_disabled": false
            },
            "syntax": {
              "address": "test@gmail.com",
              "domain": "gmail.com",
              "username": "test",
              "valid_format": true
            }
          }
        },
        "description": "The verification result of an email.",
        "properties": {
          "input": {
            "type": "string",
            "format": "email",
            "description": "The input email address."
          },
          "misc": {
            "oneOf": [
              {
                "description": "This field is present when the misc verifications succeed.",
                "properties": {
                  "is_disposable": {
                    "description": "Is the address provided by a known disposable email address provider?",
                    "type": "boolean"
                  }
                },
                "required": [
                  "is_disposable"
                ]
              },
              {
                "description": "This field is present when the misc verifications fail.",
                "properties": {
                  "error": {
                    "type": "string",
                    "description": "A description of why the misc verifications failed."
                  }
                },
                "required": [
                  "error"
                ]
              }
            ],
            "description": "Miscellaneous information about the email account.",
            "type": "object"
          },
          "mx": {
            "oneOf": [
              {
                "description": "This field is present when the MX verifications succeed.",
                "properties": {
                  "mx": {
                    "type": "object",
                    "required": [
                      "records"
                    ],
                    "description": "Object holding the MX records of the mail server.",
                    "properties": {
                      "records": {
                        "type": "array",
                        "uniqueItems": true,
                        "minItems": 1,
                        "description": "The list of FQDN (Fully Qualified Domain Names) of the mail server.",
                        "items": {
                          "type": "string",
                          "format": "hostname"
                        }
                      }
                    }
                  }
                },
                "required": [
                  "mx"
                ]
              },
              {
                "description": "This field is present when the MX verifications fail.",
                "properties": {
                  "error": {
                    "type": "string",
                    "description": "A description of why the MX verifications failed."
                  }
                },
                "required": [
                  "error"
                ]
              }
            ],
            "description": "Information gathered from querying the MX records of the mail server.",
            "type": "object"
          },
          "smtp": {
            "oneOf": [
              {
                "description": "This field is present when the SMTP verifications succeed.",
                "properties": {
                  "has_full_inbox": {
                    "type": "boolean",
                    "description": "Is the inbox of this mailbox full?"
                  },
                  "is_catch_all": {
                    "type": "boolean",
                    "description": "Is this email address a catch-all address?"
                  },
                  "is_deliverable": {
                    "type": "boolean",
                    "description": "Is an email sent to this address deliverable?"
                  },
                  "is_disabled": {
                    "type": "boolean",
                    "description": "Has this email address been disabled by the email provider?"
                  }
                },
                "required": [
                  "has_full_inbox",
                  "is_catch_all",
                  "is_deliverable",
                  "is_disabled"
                ]
              },
              {
                "description": "This field is present when the SMTP verifications fail.",
                "properties": {
                  "error": {
                    "type": "string",
                    "description": "A description of why the SMTP verifications failed."
                  }
                },
                "required": [
                  "error"
                ]
              }
            ],
            "description": "Verifications performed by connecting to the mail server via SMTP.",
            "type": "object"
          },
          "syntax": {
            "oneOf": [
              {
                "description": "This field is present when the syntax verifications succeed.",
                "properties": {
                  "domain": {
                    "type": "string",
                    "description": "The domain name of the email, i.e. the part after the \"@\" symbol.",
                    "format": "hostname"
                  },
                  "is_valid_syntax": {
                    "type": "boolean",
                    "description": "Is the address syntactically valid?"
                  },
                  "username": {
                    "type": "string",
                    "description": "The username of the email, i.e. the part before the \"@\" symbol."
                  }
                },
                "required": [
                  "domain",
                  "is_valid_syntax",
                  "username"
                ]
              },
              {
                "description": "This field is present when the syntax verifications fail.",
                "properties": {
                  "error": {
                    "type": "string",
                    "description": "A description of why the syntax verifications failed."
                  }
                },
                "required": [
                  "error"
                ]
              }
            ],
            "description": "Syntax validation of an email address.",
            "type": "object"
          }
        },
        "required": [
          "input",
          "misc",
          "mx",
          "smtp",
          "syntax"
        ]
      }
    },
    "securitySchemes": {}
  }
}
